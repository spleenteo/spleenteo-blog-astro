---
import CoverImage from './CoverImage.astro';
import PostMeta from './PostMeta.astro';

interface Props {
  category: {
    name: string;
  };
  coverImage: {
    responsiveImage: {
      src: string;
      alt?: string;
    };
  };
  date: string;
  excerpt: string;
  slug: string;
  title: string;
  tags: { name: string }[];
}

const { category, coverImage, date, excerpt, slug, title, tags } = Astro.props;
---

<section>
  <div class="mb-8 md:mb-16">
    <CoverImage title={title} responsiveImage={coverImage.responsiveImage} slug={slug} />
  </div>
  <div class="md:grid md:grid-cols-2 md:gap-x-16 lg:gap-x-8 mb-20 md:mb-28">
    <div>
      <h3 class="mb-4 text-4xl lg:text-6xl font-bold leading-tight">
        <a href={`/posts/${slug}`} class="hover:underline">
          {title}
        </a>
      </h3>
      <p class="my-2">{excerpt}</p>
      <PostMeta category={category} date={date} tags={tags} />
    </div>
  </div>
</section>
