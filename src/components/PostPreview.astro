---
import CoverImage from './CoverImage.astro';
import PostMeta from './PostMeta.astro';
import PostTitle from './PostTitle.astro';


interface Props {
  title: string;
  coverImage: {
    responsiveImage: {
      src: string;
      alt?: string;
    };
  };
  date: string;
  excerpt: string;
  slug: string;
  category: {
    name: string;
    slug: string;
  };
  tags: {
    name: string;
    slug: string;
  }[];
}

const { title, coverImage, date, excerpt, slug, category, tags } = Astro.props;
---

<div>
  <div class="mb-5">
    <CoverImage slug={slug} title={title} responsiveImage={coverImage.responsiveImage} />
  </div>
  <h3 class="text-3xl mb-3 font-bold leading-tight tracking-tight">
    <a href={`/posts/${slug}`} class="hover:underline">
      {title}
    </a>
  </h3>
  <p class="text-lg leading-relaxed mb-4">{excerpt}</p>
  <PostMeta category={category} date={date} tags={tags} />
</div>
